<%= render 'books/list', user: @user, book: @book %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
<% end %>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
    <tr>
      <tb><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label></tb>
      <tb><%= link_to @user.name, user_path(book.user_id) %></tb>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.opinion %></td>
    </tr>
    <% end %>
    </tbody>
  </table>