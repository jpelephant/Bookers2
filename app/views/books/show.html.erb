<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= link_to book_path(@book.id) do %>

      <%= attachment_image_tag @book.user, :profile_image %>
      <% end %>

      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <td><%= link_to @user.name, user_path(@book.user_id)%></td>
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.opinion %></td>
            <td></td>
            <% if @user.id == current_user.id %>
            <td><p><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></p></td>
            <td><p><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></p></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

