<%= render 'books/list', users: @users, book: @book %>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @users.each do |user| %>
     <tr>
       <tb><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tb>
       <tb><%= user.name %></tb>
       <tb><%= link_to"Show", user_path(user.id) %></tb>
     </tr>
     <% end %>
  </tbody>
</table>