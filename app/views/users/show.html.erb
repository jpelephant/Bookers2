<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag('sample-author1.jpg') %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
  <p>Title：<%= book.book_name %></p>
  <p>Opinion：<%= book.opinion %></p>
  <p>Name：<%= book.user.name %></p>
</div>
<% end %>
<%= paginate @book %>
