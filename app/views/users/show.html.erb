<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= render 'books/list', user: @user, book: @book %>
        <table class="table table-hover table-inverse">
      <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
         </thead>
        <tbody>
    <% @books.each do |book| %>
   <div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
    <tr>

      <tb><%= link_to book_title, book_path(book.id)%></tb>
      <tb><%= book.opinion %></tb>
    </tr>
    </div>
  </tbody>
</table>
</main>
<% end %>

