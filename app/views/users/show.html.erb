<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <h2>Books</h2>
          <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <%= attachment_image_tag book, :image %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
              <td><%= link_to (book.title), book_path(book.id) %></td>
              <td><%= book.opinion %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>
