<main>
<p id="notice"><%= alert %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="form-group">
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
      </div>
      <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="from-group">
  <label for="inputImage"></label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction,  autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="from-group">
  <%= f.submit "Update User" %>
      </div>
<% end %>
</from>
   </div>
   </div>
   </div>
 </main>

